<html>
  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>Rock, Paper, Scissors, Spock, Lizard!</title>
  </head>
  <body>
    <h1 align='center'>Rock, Paper, Scissors, Spock, Lizard!</h1>

    <div class="name-form">
      <form action='/names' method='Post'>
        <div class=''>
          <label for='p1_name'>Player1 Name</label>
          <input type='text' name='p1_name' value=''>
          <label>
            <input type="radio" name="player_1_type" value="human" checked> Human
          </label>

          <label for='p2_name'>Player2 Name</label>
          <input type='text' name='p2_name' value=''>
          <label>
            <input type="radio" name="player_2_type" value="human" checked> Human
          </label>
          <label>
            <input type="radio" name="player_2_type" value="computer"> Computer
          </label>
        </div>

        <div class='start-game'>
          <input id='start_game' type='submit' name='start_game' value='Start Game'>
        </div>
      </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
